gardener-setup-release:
  template: 'default'
  base_definition:
    traits:
      version:
        preprocess:
          'finalize'
    repo:
      trigger: false
    steps: ~
  jobs:
    minor-release-and-image:
      steps:
        update_image_version:
          publish_to: ['source']
      traits:
        publish:
          dockerimages:
            gardener-setup:
              inputs:
                repos:
                  source: ~
              registry: 'gcr-readwrite'
              image: 'eu.gcr.io/gardener-project/gardener/gardener-setup'
              tag_as_latest: true
        release:
          nextversion: 'bump_minor'
    patch-release-and-image:
      steps:
        update_image_version:
          publish_to: ['source']
      traits:
        publish:
          dockerimages:
            gardener-setup:
              inputs:
                repos:
                  source: ~
              registry: 'gcr-readwrite'
              image: 'eu.gcr.io/gardener-project/gardener/gardener-setup'
              tag_as_latest: true
        release:
          nextversion: 'bump_patch'
    minor-release:
      traits:
        release:
          nextversion: 'bump_minor'
    patch-release:
      traits:
        release:
          nextversion: 'bump_patch'
